    <div class="container">
        <div class="show-margin">
        <div class="row">
            <div class="preflist">
                <h2>What features are most important to you?</h2>
                <h4><em>Criteria based on a scale of 1 (least important) to 10 (most important)</em></h4>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="user-preferences">
                        <% @user_prefs.sort_by do |u| %>
                        <div id="crits_<%=u.id%>">

                            <h5 class='rating-criteria'><%= u.criterium.description.capitalize %> </h5>
                            <h5 class='rating-criteria'><em><%= u.search %></em></h5>
                            <p class='rating-criteria'>Rating: <%= u.score %></p>

                            <%= link_to "Edit", edit_user_preference_path(u), class: "edit" %>

                            <%= link_to "Delete", '#', class:'ajax-delete', data: {id:u.id } %>
                            </div>
                        <% end %>


                    </div>
                </div>
            </div>
        </div>

&nbsp

    <p><%= link_to "Add a criterium", new_user_preference_path, id: "add" %></p>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Hoadini 2015</p>
            </div>
        </div>
        <!-- /.row -->
    </footer>

    </div>
    <!-- /.container -->

    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

</html>

