<div class="editcrit">
<%= form_for @user_pref, :html => {:'data-crit-id' => @user_pref.id } do |f| %>
  <fieldset>
    <legend> Modify your feature preference. </legend>
    <div align="center"><br>
      <%=@user_pref.criterium.description%><br>
      Score: <input type="text" name="score" value="<%=@user_pref.score%>" />
      Search for: <input type="text" name="search" value="<%=@user_pref.search%>" />
      <input type="submit" value="Modify">
    </div>
  </fieldset>
<% end %>

<%= link_to "Edit", edit_user_preference_path(@user_pref), class: "edit" %>

<%= link_to "Delete", '#', class:'ajax-delete', data: {id:@user_pref.id } %>

</div>
