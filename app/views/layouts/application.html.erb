            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="/properties">Search Properties</a>
                    </li>
                    <%if current_user%>
                    <li>
                        <a href="/users/<%=current_user.id%>">My Favorites</a>
                    </li>
                  <li><a href="/users/<%=current_user.id%>">Logged in as: <%=current_user.name%></a></li>
                    <% else %>
                    <li><%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %></li>
                  <%end%>

                  <li><a href="/logout">Logout</a></li>
               </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

