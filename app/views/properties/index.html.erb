<%= javascript_include_tag "google_map.js" %>

<div id="google-map-block">
  <input id="pac-input" class="controls" type="text" placeholder="Search Box">
  <div id="map-canvas"></div>
  <div class='properties-list'>
    <ul>
    <% @properties.each do |property|%>
      <div class="row">
        <div .col-md-4 .col-xs-4 >
          <a href="/properties/<%property.id%>" class="thumbnail">
          <img src="http://unescovietnam.vn/vnf/images/stories/van_hoa/tin_van_hoa/Vietnam-46.jpg">
          </a>
        </div>
        <%=property.title%>
        <%=property.address%>
      </div>
    <% end %>
    </ul>
  </div>
</div>
