<hr>

  <div class="row"
    <div class="property-info">
      <h3> Pricing </h3>
        <div>
          <p>Monthly: <%= @property_hash["result"]["price"]["monthly"] %></p>
          <p>Nightly: <%= @property_hash["result"]["price"]["nightly"] %> <p>
          <p>Weekend: <%= @property_hash["result"]["price"]["weekend"] %> <p>
          <p>Weekly: <%= @property_hash["result"]["price"]["weekly"] %> <p>
        </div>

  <hr>

      <h3>Renter Information</h3>
        <div>
          <p>Room Type: <%= @property_hash["result"]["attr"]["roomType"]["text"] %></p>
          <p>Property Type: <%= @property_hash["result"]["attr"]["propType"]["text"] %></p>
          <p>Minimum Nights: <%= @property_hash["result"]["price"]["minNight"] %></p>
          <p>Maximum Nights: <%= @property_hash["result"]["price"]["maxNight"] %></p>
          <p>Number of Bathrooms: <%= @property_hash["result"]["attr"]["bathrooms"] %></p>
          <p>Number of Bedrooms: <%= @property_hash["result"]["attr"]["bedrooms"] %></p>
