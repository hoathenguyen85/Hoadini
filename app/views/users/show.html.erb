 <!-- Bootstrap core CSS -->
<link href="../../dist/css/bootstrap.min.css" rel="stylesheet">
<link href="../../dist/css/user_show.css" rel="stylesheet">

<!-- Jumbotron -->
<div class="jumbotron">
  <h3><%= @user.name %></h3>
 <p><a class="btn btn-primary btn-sm" href="/properties" role="button">Find Properties!</a></
</div>

<!-- Example row of columns -->
<h4>Favorite Properties</h4>
    <p>There will be three columns with divs below containing property information, including picture, description, and link to view individual property here.</p>
<div class="row">
  <% @properties.each do |property| %>
  <div class="col-lg-4">
    <h3><%= property.title %></h3>
    <p><%= property.address %></p>
    <p><%= image_tag(property.picture) %></p>
    <p><a class="btn btn-primary" href="#" role="button">View details &raquo;</a></p>
  </div>
  <% end %>
</div>



