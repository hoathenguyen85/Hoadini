<div class="container">
    <div class="favorites-header">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <p>
                    <a class="btn btn-primary btn-md" href="/user_preferences" role="button">Edit Preferences</a>
                    <a class="btn btn-primary btn-md" href="/properties" role="button">Search Properties</a>
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <h2>My Favorites</h2>
    <div class="row">
        <div class="property">
        <% @properties.each do |property| %>
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4">
                <div class="property-image user_fave_div">
                    <%= image_tag(property.picture, class: 'user_fave_img') %>
                </div>
                <div>
                    <h3><%= property.title %></h3>
                        <p><%= property.address %></p>
                        <p><a class="btn btn-primary" href="/properties/<%=property.z_id%>" role="button">View details &raquo;</a></p>
                </div>
            </div>
         <% end %>
        </div>
    </div>
</div>

<!-- Footer -->
<footer>
    <div class="row">
        <div class="col-lg-12">
            <p>Copyright &copy; Hoadini 2015</p>
        </div>
    </div>
</footer>

</div>

<!-- jQuery -->
<script src="js/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>

